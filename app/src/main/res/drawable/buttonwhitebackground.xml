<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="#aaaaaa" />
            <gradient android:angle="-90" android:startColor="#aaaaaa" android:endColor="#aaaaaa"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="#ffdbfcf7" />
            <solid android:color="#ffeedd"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="#ffdbfcf7" />
            <gradient android:angle="-90" android:startColor="#ffdbfcf7" android:endColor="#ffdbfcf7" />
        </shape>
    </item>
</selector>